<div class="card">
  <div class="card-body">
    <h2 class="card-title mb-5">Sign up</h2>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="form-group">
        <%= f.label :name, style:'font-size:15px' %>
        <%= f.text_field :name, autofocus: true, class: 'form-control' %>
      </div>

      <div class="field form-group">
        <%= f.label :email, style:'font-size:15px' %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= f.label :user_type, style:'font-size:15px' %>
        <%= f.select :user_type,  User::USERTYPE_ , {}, autofocus: true , class: 'form-control'%>
      </div>

      <div class="field form-group">
        <%= f.label :password, style:'font-size:15px' %>
        <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> characters minimum)</em>
        <% end %>
        <%= f.password_field :password, autocomplete: "new-password", class: 'form-control' %>
      </div>

      <div class="field form-group">
        <%= f.label :password_confirmation, style:'font-size:15px' %>
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'form-control' %>
      </div>

      <div class="actions form-group">
        <%= f.submit "Sign up", class: 'btn btn-primary mt-3' %>
      </div>
    <% end %>

  </div>
</div>

